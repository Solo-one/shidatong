/**index.wxss**/

page {
  background: white;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
}

.title {
  margin: 25rpx;
  font-size: 20px;
  font-weight: bold;
}

.header {
  display: flex;
  flex-direction: row;
  margin-left: 25rpx;
  margin-right: 25rpx;
  height: 60rpx;
}

.header .number {
  font-size: 18px;
  border: 1rpx solid black;
  width: 20%;
  font-weight: bold;
  line-height: 60rpx;
  text-align: center;
}

.header .name {
  font-size: 18px;
  border: 1rpx solid black;
  width: 40%;
  font-weight: bold;
  line-height: 60rpx;
}

.header .gender {
  font-size: 18px;
  border: 1rpx solid black;
  width: 40%;
  font-weight: bold;
  line-height: 60rpx;
}

.block .number {
  font-size: 18px;
  border: 1rpx solid black;
  width: 20%;
  text-align: center;
  line-height: 80rpx;
}

.block .name {
  font-size: 18px;
  border: 1rpx solid black;
  width: 40%;
  line-height: 80rpx;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
}

.block .gender {
  font-size: 18px;
  border: 1rpx solid black;
  width: 40%;
  line-height: 80rpx;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
}

.list-block {
  margin-bottom: 20rpx;
}

.block {
  display: flex;
  flex-direction: row;
  height: 80rpx;
  background: white;
  margin-left: 25rpx;
  margin-right: 25rpx;
}
