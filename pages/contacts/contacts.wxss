/**index.wxss**/

page {
  background: white;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
}

.title {
  margin: 25rpx;
  font-size: 20px;
  font-weight: bold;
}

.header {
  display: flex;
  flex-direction: row;
  height: 60rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.header .name {
  font-size: 18px;
  border: 1rpx solid black;
  width: 35%;
  font-weight: bold;
  line-height: 60rpx;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
}

.header .phone {
  font-size: 18px;
  border: 1rpx solid black;
  width: 40%;
  font-weight: bold;
  line-height: 60rpx;
}

.header .call {
  font-size: 18px;
  border: 1rpx solid black;
  width: 25%;
  font-weight: bold;
  line-height: 60rpx;
  text-align: center;
}

.block .name {
  font-size: 16px;
  border: 1rpx solid black;
  width: 35%;
  line-height: 100rpx;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
}

.block .phone {
  font-size: 16px;
  border: 1rpx solid black;
  width: 40%;
  line-height: 100rpx;
}

.block .call {
  border: 1rpx solid black;
  width: 25%;
  text-align: center;
}

.block .call text {
  padding: 10rpx 25rpx;
  line-height: 100rpx;
  background: #09bb07;
  color: white;
  border-radius: 12rpx;
  /* border: 2rpx solid white; */
}

.list-block {
  margin-bottom: 20rpx;
}

.block {
  display: flex;
  flex-direction: row;
  height: 100rpx;
  background: white;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
