/**index.wxss**/
@import "../../app.wxss";

page {
    background: white;
}

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    box-sizing: border-box;
}

form {
    margin: 20rpx;
}

.headertext {
    font-size: 18px;
    padding-left: 22rpx;
}

.section1 {
    margin: 0 20rpx 20rpx 20rpx;
    border: 1px solid #ccc;
    border-radius: 10px;
    /* height: 100rpx; */
}

.section2 {
    margin: 0 20rpx 20rpx 20rpx;
    border: 1px solid #ccc;
    border-radius: 10px;
    /* height: 200rpx; */
}

.input1 {
    text-indent: 8rpx;
    width: 95%;
    font-size: 16px;
    padding: 4px 3px 8px 6px;
}

.input2 {
    text-indent: 8rpx;
    width: 95%;
    font-size: 16px;
    padding: 4px 3px 20px 6px;
}

.addImage {
    margin: 0 20rpx 20rpx 20rpx;
}

.sub {
    clear: both;
    margin-top: 30rpx;
    height: 35px;
    line-height: 35px;
    width: 130px;
    border-radius: 10px;
    background: #09bb07;
    color: white;
    text-align: center;
}

.weui-grid {
    position: relative;
    float: left;
    padding: 5rpx 5rpx;
    width: 33.33333333%;
    box-sizing: border-box;
    border-right: 1rpx solid #d9d9d9;
    border-bottom: 1rpx solid #d9d9d9;
}

.weui-grid_active {
    background-color: #ececec;
}

.weui-grid__icon {
    display: block;
    width: 220rpx;
    height: 220rpx;
    margin: 0 auto;
}

.weui-grid__label {
    margin-top: 10rpx;
    display: block;
    text-align: center;
    color: #000;
    font-size: 32rpx;
    padding-top: 6rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}
